<footer class="clip-outer">
    <div class="clip-inner footer-inner">
        <div class="black-bg">
            <span class="clock" id="MyClockDisplay" style="color: #fff">12:34 PM</span>
        </div>
        <fieldset>
            <legend class="visually-hidden">Brightness Mode</legend>
            <input type="radio" id="light-mode" name="brightness" checked>
            <label for="light-mode">
                {% renderFile "./includes/icons/sun.liquid" %}
            </label>
            <input type="radio" id="dark-mode" name="brightness">
            <label for="dark-mode">
                {% renderFile "./includes/icons/moon.liquid" %}
            </label>
        </fieldset>
        <input type="checkbox" id="enable-slider" name="enable-slider">
        <label for="enable-slider">{% renderFile "./includes/icons/rainbow.liquid" %}</label><br>
        <div class="slidecontainer">
        <div class="pixel-corners--wrapper">
        <input class="slider" type="range" id="color-slider" name="color-slider" min="0" max="359" value="0" step="1" disabled/>
        <label class="visually-hidden" for="color-slider">Background color hue slider</label>
        </div>
        </div>
        <div class="footer-link-wrapper" style="background-color: #000">
            <span>ME</span>
        </div>
        <div class="footer-link-wrapper" style="background-color: #000">
            <span>CV</span>
        </div>
        <div class="footer-link-wrapper" style="background-color: #000">
            <span>WORK</span>
        </div>
        <div class="footer-link-wrapper" style="background-color: #000">
            <span>CONTACT</span>
        </div>
        <div class="filler">
    </div>
</footer> 